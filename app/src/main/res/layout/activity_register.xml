<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DataAdmin.RegisterActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/border_blue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Users"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/suNama"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama"
                android:padding="8dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_blue"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"/>
            <EditText
                android:id="@+id/suNohp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nohp"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_blue"
                android:drawableLeft="@drawable/baseline_phone_iphone_24"
                android:drawablePadding="8dp"/>
            <EditText
                android:id="@+id/suEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_blue"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"/>
            <EditText
                android:id="@+id/suPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_blue"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/btBatal"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Batal"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#D52D2D"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/btSignup"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Tambah"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#2DD533"/>

    </LinearLayout>



</LinearLayout>